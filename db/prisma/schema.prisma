// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  email String @unique
  username String @unique @db.VarChar(30)
  password String @db.VarChar(100)
}

model Armors {
  id String @id
  name String @unique
  image String @unique
  description String
  category String
  weight Float
}

model Ammos {
  id String @id
  name String @unique
  image String @unique
  description String
  type String
  passive String
}

model Ashes {
  id String @id
  name String @unique
  image String @unique
  description String
  affinity String
  skill String
}

model Items {
  id String @id
  name String @unique
  image String @unique
  description String
  type String
  effect String
}

model Shields {
  id String @id
  name String @unique
  image String @unique
  description String
  category String
  weight Float
}

model Talismans {
  id String @id
  name String @unique
  image String @unique
  description String
  effects String
}

model Weapons {
  id String @id
  name String @unique
  image String @unique
  description String
  category String
  weight Float
}
